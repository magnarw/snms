<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    
    <RelativeLayout 
	  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_padding"
    android:paddingRight="@dimen/list_padding" 
    android:orientation="horizontal"
    android:id="@+id/latestNewsContainer"
    android:background="@color/white"
	 >
        
	         <ImageView
	    android:id="@+id/headerImage1"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_width="fill_parent"
	    android:layout_height="180dp"
	     android:scaleType="centerCrop"
	     android:src="@drawable/moskebg"
	    android:padding="0dp"
	 />
 
	         

    
    <TextView
    android:id="@+id/headerText1"
  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:padding="5dp"
    android:layout_alignLeft="@+id/headerImage1"
    android:layout_alignRight="@+id/headerImage1"
    android:layout_alignBottom="@+id/headerImage1"
    android:layout_margin="0dp"
    
    android:gravity="bottom"
     android:background="#99000000"
       android:text="Om snms"
    android:textColor="@color/white" 
     android:textAppearance="@android:style/TextAppearance.Large" />
    />   
	 

    
	



<LinearLayout
      android:layout_width="fill_parent"
      android:id="@+id/addressWrapper"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp" 
   	android:layout_marginTop="10dp"
   	android:layout_below="@+id/headerText1"
   	android:layout_marginLeft="15dp"
 	android:layout_marginRight="15dp"
    android:gravity="left">
    
    <ImageView
  	          android:id="@+id/timeImage1"
  	          android:layout_width="25dp"
  	          android:layout_height="25dp"
  	          android:gravity="bottom"
  	          android:paddingTop="5dp"
  	          android:layout_marginRight="10dp"
  	          android:src="@drawable/ic_action_place" />


  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   	android:layout_below="@+id/headerText1"
    android:gravity="left">
    
      
    
    <TextView
    android:id="@+id/addressLine1"
  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
    android:gravity="bottom"
    android:text="Lofsrudhøgda 210"
    android:textColor="@color/black" 
     android:textAppearance="@android:style/TextAppearance.Medium" 
     />
    
    <TextView
    android:id="@+id/addressLine2"
  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
    android:gravity="bottom"
    android:text="Oslo, Norway"
    android:textColor="@color/black" 
     android:textAppearance="@android:style/TextAppearance.Small" 
     />
    
    
    
     
    </LinearLayout>
    
   
     
    
  	</LinearLayout>
  	

		  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
       android:id="@+id/mapWrapper"
    android:background="@drawable/border"
   	android:layout_marginTop="3dp"
   	android:layout_below="@+id/addressWrapper"
   	android:layout_marginLeft="0dp"
 	android:layout_marginRight="0dp"
 	     android:layout_gravity="left"
 	      android:paddingBottom="13dp"
    android:gravity="left">
        
		           <ImageView
	    android:id="@+id/mapImage"
	    android:layout_marginLeft="0dp"
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"
	     android:scaleType="centerCrop"
	     android:src="@drawable/moskmap"
	    android:padding="0dp"
	 />
		      
		      
		      </LinearLayout>


  
  	  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
       android:id="@+id/timeWrapper"
    android:paddingLeft="5dp" 
    android:background="@drawable/border"
   	android:layout_marginTop="15dp"
   	android:layout_below="@+id/mapWrapper"
   	android:layout_marginLeft="15dp"
 	android:layout_marginRight="15dp"
 	     android:layout_gravity="left"
 	      android:paddingBottom="13dp"
    android:gravity="left">

  	      <ImageView
  	          android:id="@+id/facebookImage"
  	          android:layout_width="25dp"
  	          android:layout_height="25dp"
  	          android:gravity="bottom"
  	          android:padding="0dp"
  	          android:layout_marginRight="10dp"
  	          android:src="@drawable/ic_settings" />
    
    <TextView
    android:id="@+id/faceText"
  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
    android:gravity="bottom"
    android:layout_gravity="center"
    android:paddingTop="0dp"
    android:text="Lik oss på facebook"
    android:textColor="@color/black" 
     android:textAppearance="@android:style/TextAppearance.Small" 
     />
    
     
    </LinearLayout>
    
  	    	  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
       android:id="@+id/webpageContainer"
    android:paddingLeft="5dp" 
    android:background="@drawable/border"
   	android:layout_marginTop="15dp"
   	android:layout_below="@+id/timeWrapper"
   	android:layout_marginLeft="15dp"
 	android:layout_marginRight="15dp"
 	     android:layout_gravity="left"
 	      android:paddingBottom="13dp"
    android:gravity="left">

  	      <ImageView
  	          android:id="@+id/webpageImageLink"
  	          android:layout_width="25dp"
  	          android:layout_height="25dp"
  	          android:gravity="bottom"
  	          android:padding="0dp"
  	          android:layout_marginRight="10dp"
  	          android:src="@drawable/ic_settings" />
    
    <TextView
    android:id="@+id/webpageText"
  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
    android:gravity="bottom"
    android:layout_gravity="center"
    android:paddingTop="0dp"
    android:text="Besøk vår webside"
    android:textColor="@color/black" 
     android:textAppearance="@android:style/TextAppearance.Small" 
     />
    
     
    </LinearLayout>


 	   <TextView
    android:id="@+id/Newstext"
  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  	 android:layout_marginLeft="15dp"
 	 android:layout_marginRight="15dp"
 	 android:layout_marginTop="10dp"
    android:layout_below="@+id/webpageContainer"
    android:gravity="left"
    android:padding="5dp"
    android:text="Søndre Nordstrand Muslimske Senter (SNMS) er et muslimsk trossamfunn i Bydel Søndre Nordstrand."
    android:textColor="@color/black" 
     android:textAppearance="@android:style/TextAppearance.Medium" />
    /> 
    
    

	     
	  </RelativeLayout>

    
    
    
 </ScrollView>   