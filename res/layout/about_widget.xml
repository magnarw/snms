<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/latestNewsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding" >

        <ImageView
            android:id="@+id/headerImage1"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/moskebg" />

        <TextView
            android:id="@+id/headerText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/headerImage1"
            android:layout_alignLeft="@+id/headerImage1"
            android:layout_alignRight="@+id/headerImage1"
            android:layout_margin="0dp"
            android:background="#99000000"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Om snms"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/addressWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerText1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <ImageView
                android:id="@+id/timeImage1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingTop="5dp"
                android:src="@drawable/ic_action_place" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerText1"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/addressLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Lofsrudhøgda 210"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/addressLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Oslo, Norway"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressWrapper"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/border"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="13dp" >

            <ImageView
                android:id="@+id/mapImage"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/moskmap" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapWrapper"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="5dp" >

            <ImageView
                android:id="@+id/timeImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:src="@drawable/facebook_like_icon" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:paddingTop="0dp"
                android:text="Lik oss på facebook"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/Newstext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeWrapper"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Søndre Nordstrand Muslimske Senter (SNMS) er et muslimsk trossamfunn i Bydel Søndre Nordstrand."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/black" />
    </RelativeLayout>

</ScrollView>