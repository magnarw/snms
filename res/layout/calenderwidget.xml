<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prey_prev_day"
                android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/leftarrow_bg" />
		<TextView
		    android:id="@+id/prey_current_day"
            	 android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_daypicker"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginTop="2.5dp"
            android:text="Onsdag 3"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" 
		   >
		</TextView> 


        <ImageView
            android:id="@+id/prey_next_day"
               android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/rightarrow_bg" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/border_header_pray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding ="5dp"
            android:text="Dag"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
               android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                     android:padding ="5dp"
            android:text="Fajr"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
           android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
                   android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                   android:padding ="5dp"
            android:text="Sol."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
                    android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                    android:padding ="5dp"
            android:text="Dhuhr"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
              android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
                      android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                    android:padding ="5dp"
            android:text="Asr"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
              android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
                   android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                  android:padding ="5dp"
            android:text="Mag."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
             android:textSize="11dp" />

        <TextView
            android:id="@+id/prey_time"
                 android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
                    android:padding ="5dp"
            android:text="Isha"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
             android:textSize="11dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/preyCalender"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scrollbarSize="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</LinearLayout>