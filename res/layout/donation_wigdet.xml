<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" >

        <RelativeLayout
            android:id="@+id/latestNewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding" >

            <ImageView
                android:id="@+id/headerImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/moskebg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/headerImage1"
                android:layout_alignLeft="@+id/headerImage1"
                android:layout_alignRight="@+id/headerImage1"
                android:background="#99000000"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/headerImage12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_donation" />

                <TextView
                    android:id="@+id/headerText1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="bottom"
                    android:text="Gi ditt bidrag til SNMS"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/border_donation"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/donationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="3dp"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:text="SMS Donasjon er en sikker og effektiv tjeneste som gir deg mulighet til å donere til Masjid ved å sende en tekstmelding.\n\nMed Allahs velsignelse arbeider SNMS målrettet for å bygge moské på Mortensrud, og trenger økonomisk støtte fra dere.\nAlle som ønsker å bidra kan velge et beløp under og klikke på 'Trykk her for å gi pengestøtte'. JazakAllah khair!"
			android:textSize="13dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:background="@color/snmsBackgroundBlue"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.3"
            android:background="@color/snmsDarkBlue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="0dp" >

            <ImageButton
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:padding="0dp"
                  android:layout_height="30dp"
                  android:background="@drawable/snmsbutton"
                android:src="@drawable/ic_donation_arrow_up" />
            
             <TextView
                android:id="@+id/donationSumPickerPrev"
                android:gravity="center"
                android:background="@color/snmsDarkBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/snmsEventDarkGray"
                android:textSize="15dp"
                android:text="150"
                android:inputType="number" >

            </TextView>
            

            <TextView
                android:id="@+id/donationSumPicker"
                android:gravity="center"
                    android:background="@color/snmsDarkBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:text="50"
                android:inputType="number" >

            </TextView>
            
                        
             <TextView
                android:id="@+id/donationSumPickerNext"
                android:gravity="center"
                android:background="@color/snmsDarkBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/snmsEventDarkGray"
                android:textSize="15dp"
                android:text="250"
                android:inputType="number" >

            </TextView>
            

            <ImageButton
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="0dp"
                android:background="@drawable/snmsbutton"
                android:src="@drawable/ic_donation_arrow_down" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/snmsBackgroundBlue"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/donation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:text="Valgt beløp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/donationSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:text="250kr"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <Button
                android:id="@+id/donerButton"
                android:layout_width="180dp"
                   android:layout_marginTop="15dp"
                android:layout_height="75dp"
                android:background="@color/snmsActiveGreen"
                android:gravity="center"
                android:padding="5dp"
                android:text="TRYKK HER FOR\n Å GI PENGESTØTTE"
                android:textColor="@color/white" />
            
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsBackgroundBlue"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:orientation="horizontal" >
                
          
                
                    <TextView
                android:id="@+id/moreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="Mer info"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/white"
                android:textSize="13dp" />
                    
                                   <ImageView
                android:id="@+id/placeHolder3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                  android:layout_margin="3dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_info" />
                
                 
            </LinearLayout>     
            
            
            
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>