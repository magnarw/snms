<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/snmsActionBar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="@color/snmsActionBar"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <ImageButton
                android:id="@+id/prey_prev_day"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"
                android:background="@drawable/snmsbutton"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:id="@+id/prey_current_day"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.60"
                android:background="@drawable/datepickerbg"
                android:gravity="center"
                android:text="Onsdag 3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="16dp" >
            </TextView>

            <ImageButton
                android:id="@+id/prey_next_day"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"
                android:background="@drawable/snmsbutton"
                android:src="@drawable/rightarrow_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="0dp"
            android:background="@drawable/border_header_pray"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="BÃ¸nn"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/prey_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center_vertical"
                android:text="Tid"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center_vertical"
                android:text="Tid igjen"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/prey_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="Alarm"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preyRowContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newsJummaSpinnerProgress"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:background="@drawable/border_none_active_pray"
            android:orientation="horizontal"
            android:paddingLeft="20dp" >

            <ProgressBar
                android:id="@+id/newsJummaSpinnerProgress2"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
            </ProgressBar>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jummacontainer"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_none_active_pray"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/row_title_jumma"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Jummah"
                android:textSize="@dimen/snms_text_small" />

            <TextView
                android:id="@+id/row_time_jumma"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:gravity="center_vertical"
                android:text="..."
                android:textSize="@dimen/snms_text_small" />

            <TextView
                android:id="@+id/row_status_jumma"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:gravity="center_vertical"
                android:text="..."
                android:textSize="@dimen/snms_text_small" />

            <ImageButton
                android:id="@+id/alarmclock_inactive"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".15"
                android:background="@drawable/snmsalarmbutton"
                android:gravity="center"
                android:onClick="setAlarm"
                android:src="@drawable/ic_alarm_clock" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="@color/snmsActionBar"
            android:orientation="horizontal"
            android:weightSum="1.0" 
             >

            <ImageButton
                android:id="@+id/prev_news"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"
                android:background="@drawable/snmsbutton"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:id="@+id/prey_current_day"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".60"
                android:background="@color/snmsDarkBlue"
                android:gravity="center"
                android:text="Siste nytt"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="16dp" >
            </TextView>

            <ImageButton
                android:id="@+id/next_news"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"
                android:background="@drawable/snmsbutton"
                android:src="@drawable/rightarrow_bg" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/newsSpinnerProgress"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </ProgressBar>

        <RelativeLayout
            android:id="@+id/latestNewsContainer"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/snmsActionBar"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding"
            android:paddingTop="5dp" 
            android:paddingBottom="5dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/newsImage1"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/newsImage1Text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/newsImage1"
                android:layout_alignLeft="@+id/newsImage1"
                android:layout_alignRight="@+id/newsImage1"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#99000000"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="Hello"
                android:textColor="@color/white" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/newsImage2"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/newsImage2Text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/newsImage2"
                android:layout_alignLeft="@+id/newsImage2"
                android:layout_alignRight="@+id/newsImage2"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#99000000"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="Hello"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
