<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snmsActionBar"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="@color/snmsActionBar"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <ImageButton
            android:id="@+id/prey_prev_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/prey_current_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0.60"
            android:background="@drawable/datepickerbg"
            android:gravity="center"
            android:text="Onsdag 3"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </TextView>

        <ImageButton
            android:id="@+id/prey_next_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/rightarrow_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="0dp"
        android:background="@drawable/border_header_pray"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Bønn"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid igjen"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="Alarm"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/preyRowContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newsJummaSpinnerProgress"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:background="@drawable/border_none_active_pray"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <ProgressBar
            android:id="@+id/newsJummaSpinnerProgress2"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </ProgressBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/shortCuts"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight=".50"
            android:background="@color/snmsActiveGreen"
            android:gravity="center"
            android:text="Snarveier"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </Button>

        <Button
            android:id="@+id/latestNews"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight=".50"
            android:background="@drawable/snmsbutton"
            android:gravity="center"
            android:text="Siste nytt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </Button>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/newsSpinnerProgress"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >
    </ProgressBar>
	
    <HorizontalScrollView 
          android:layout_width="match_parent"
          android:id="@+id/latesetNewsScrollView"
        android:layout_height="140dp"
         android:background="@color/snmsDarkBlue"
         android:paddingBottom="5dp"
         android:visibility="gone"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding"
        >
        
       <LinearLayout
            android:layout_width="wrap_content"
              android:id="@+id/latestNewsContainer"
            android:layout_height="match_parent"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0"/>
        
    </HorizontalScrollView>
    
    
    <LinearLayout
        android:id="@+id/shortCutContainer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/newsShortCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_qibla"
                android:paddingTop="5dp"
                android:text="News"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>

            <Button
                android:id="@+id/qiblaShortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_qibla"
                android:paddingTop="5dp"
                android:text="Qibla"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>

            <Button
              android:id="@+id/qiblaDonationShortCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_donation"
                android:paddingTop="5dp"
                android:text="Støtt oss"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/eventsShortCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_events"
                android:paddingTop="5dp"
                android:text="Events"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>

            <Button
                android:id="@+id/buildShortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_buildproject"
                android:paddingTop="5dp"
                android:text="Bygg.p"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>

            <Button
              android:id="@+id/settingsShortCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/snmsbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_qibla"
                android:paddingTop="5dp"
                android:text="Innstillinger"
                android:textColor="#FFFFFF"
                android:textSize="13dp" >
            </Button>
        </LinearLayout>
        
    </LinearLayout>
        </LinearLayout>
