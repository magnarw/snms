<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/snmsActionBar"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="@color/snmsActionBar"
        android:orientation="horizontal" 
        android:weightSum="1.0"
        >

        <ImageButton
            android:id="@+id/prey_prev_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/prey_current_day"
      		 android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.60"
            android:background="@drawable/datepickerbg"
            android:gravity="center"
            android:text="Onsdag 3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </TextView>

        
        <ImageButton
            android:id="@+id/prey_next_day"
    		android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/rightarrow_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="0dp"
        android:background="@drawable/border_header_pray"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center_vertical"
   			android:paddingLeft="20dp"
            android:text="BÃ¸nn"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid igjen"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:layout_weight=".2"
            android:gravity="right|center_vertical"
            android:text="Alarm"
            android:paddingRight="5dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
    
	<LinearLayout 
	  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/preyRowContainer"
	 >
       	</LinearLayout>
       	
 
	<LinearLayout 
	android:id="@+id/newsJummaSpinnerProgress"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:orientation="horizontal"
       android:layout_gravity="center"
    android:background="@drawable/border_none_active_pray" 
    android:paddingLeft="20dp">	
	
<ProgressBar
            android:id="@+id/newsJummaSpinnerProgress2"
            style="@style/AppTheme"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
   </ProgressBar>  
   
</LinearLayout>
	<LinearLayout 
	android:id="@+id/jummacontainer"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:background="@drawable/border_none_active_pray" 
    android:weightSum="1.0"
    >
	 
	    <TextView
        android:paddingLeft="20dp"
          android:id="@+id/row_title_jumma"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".4"
        android:gravity="center_vertical"
          android:text="Jummah"
       android:textSize="@dimen/snms_text_small" />    
	    

        <TextView
              android:id="@+id/row_time_jumma"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".2"
        android:gravity="center_vertical"
        android:text="..."
        android:textSize="@dimen/snms_text_small" />
    
 
    
        <TextView
       android:id="@+id/row_status_jumma"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:gravity="center_vertical"
        android:text="..."
         android:textSize="@dimen/snms_text_small" />
    
    

    
    <ImageButton 
        android:layout_height="fill_parent" 
        android:layout_width="0dp" 
        android:onClick="setAlarm" 
        android:gravity="center"
        android:layout_weight=".15" 
        android:id="@+id/alarmclock_inactive" 
        android:background="@drawable/snmsalarmbutton"
        android:src="@drawable/ic_alarm_clock"/>

</LinearLayout>
	
	
	
	
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="horizontal" 
        android:layout_gravity="center_horizontal"
        >

        <ImageButton
            android:id="@+id/prev_news"
           android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/leftarrow_bg"/> 

        <TextView
            android:id="@+id/prey_current_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/snmsDarkBlue"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="Siste nytt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </TextView>

        <ImageButton
            android:id="@+id/next_news"
              android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/rightarrow_bg"/> 
    </LinearLayout>    
    
       
     
     <ProgressBar
            android:id="@+id/newsSpinnerProgress"
            style="@style/AppTheme"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>    
        
<RelativeLayout 
	  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_padding"
    android:paddingRight="@dimen/list_padding" 
    android:orientation="horizontal"
    android:paddingTop="7dp"
    android:id="@+id/latestNewsContainer"
    android:background="@color/white"
	 >
        
	         <com.android.volley.toolbox.NetworkImageView
	    android:id="@+id/newsImage1"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_width="200dp"
	    android:layout_height="110dp"
	         android:scaleType="centerCrop"
	    android:padding="5dp"
	 />
        
	 
<TextView
    android:id="@+id/newsImage1Text"
  android:layout_width="200dp"
	  android:layout_height="wrap_content"
	 android:padding="5dp"
    android:layout_alignLeft="@+id/newsImage1"
    android:layout_alignRight="@+id/newsImage1"
    android:layout_alignBottom="@+id/newsImage1"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
    android:gravity="bottom"
     android:background="#99000000"
    android:text="Hello"
    android:textColor="@color/white" />   

		         <com.android.volley.toolbox.NetworkImageView
	    android:id="@+id/newsImage2"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	 android:layout_width="200dp"
	    android:scaleType="centerCrop"
	  android:layout_height="110dp"
	    android:padding="5dp"
	 />
        
	 
<TextView
    android:id="@+id/newsImage2Text"
   android:layout_width="200dp"
	  android:layout_height="wrap_content"
	
	 android:padding="5dp"
    android:layout_alignLeft="@+id/newsImage2"
    android:layout_alignRight="@+id/newsImage2"
    android:layout_alignBottom="@+id/newsImage2"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
   android:gravity="bottom"
    android:background="#99000000"
    android:text="Hello"
    android:textColor="@color/white" />   

	     
	  </RelativeLayout>
	    


      


  
    

</LinearLayout>


    
   
</ScrollView>