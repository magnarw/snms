<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snmsDarkBlue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prey_prev_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
     		android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_left_arrow" />
		<Button
		    android:id="@+id/prey_current_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Onsdag 3"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:background="@drawable/buttonbackground"
            android:textSize="16dp"
		   >
		</Button> 


        <ImageView
            android:id="@+id/prey_next_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        android:background="@drawable/border_header_pray" 
        android:orientation="horizontal" >

        <com.example.snms.SnmsTextView
            android:id="@+id/header_title"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="BÃ¸nn"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <com.example.snms.SnmsTextView
            android:id="@+id/prey_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Tid"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <com.example.snms.SnmsTextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Status"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <com.example.snms.SnmsTextView
            android:id="@+id/prey_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Alarm"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>